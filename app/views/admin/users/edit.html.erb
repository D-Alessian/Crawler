<h1>Edit User <%= @user.email %></h1>
<%= form_with model: [:admin, @user], local: true do |f| %>
  <%= f.email_field :email %>
  <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] } %>
  <%= f.submit %>
<% end %>
<%= link_to 'Back to Users', admin_users_path, class: 'btn btn-secondary' %>

